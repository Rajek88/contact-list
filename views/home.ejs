<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <h1>Contact List</h1>
        <div>
            <ul>
                <% for (let i of contact_list) { %> 
                    
                    <li>
                        <h3><%= i.person %></h3>
                        <p><%= i.phone %></p>
                    </li>
                
                <% }%>
            </ul>
        </div>

        <form action="/add-contact" method="POST">
            <input type="text" name="person" placeholder="Enter your name" required>
            <input type="number" name="phone" placeholder="Enter your phone no." required>
            <button type="submit">Add Contact</button>
        </form>
    </body>
</html>